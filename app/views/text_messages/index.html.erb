<p id="notice"><%= notice %></p>

<h1>Listing Text Messages</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>From phone number</th>
      <th>To phone number</th>
      <th>Short link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @text_messages.each do |text_message| %>
      <tr>
        <td><%= text_message.message %></td>
        <td><%= text_message.from_phone_number %></td>
        <td><%= text_message.to_phone_number %></td>
        <td><%= text_message.short_link %></td>
        <td><%= link_to 'Show', text_message %></td>
        <td><%= link_to 'Edit', edit_text_message_path(text_message) %></td>
        <td><%= link_to 'Destroy', text_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

