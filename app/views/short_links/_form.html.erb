
<%= form_for(@short_link, remote: true, :html => { :id => 'short_link_form' }) do |f| %>

  <div class="form-group form-group-lg">
    <%= f.text_field :destination_url, class: "form-control", type:"url", placeholder: "Enter your long URL" %>
  </div>
  <br>
  <div class="form-group form-group-lg">
    <%= f.text_field :user_short_key, class: "form-control", placeholder:"Enter your customized shrty" %>
  </div>
  <br>
  <div class="actions text-center">
    <%= f.submit "go shrty!", id: "go-shrty-btn", class: "btn btn-primary btn-lg" %>
  </div>

  <div id="shrty-form-status" class="text-center"> 
     <h1 id="success-msg"></h1>
      <ul id="error-msg"></ul> 
  </div>
<% end %>
